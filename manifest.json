{
    "manifest_version": 3,
    "name": "AI DJ Cara - YouTube Music Helper",
    "version": "1.0",
    "description": "Alerts when a song is about to end on YouTube Music.",
    "permissions": [
        "activeTab",
        "aiAssistant",
        "offscreen",
        "scripting",
        "storage",
        "tts"
    ],
    "host_permissions": [
        "https://music.youtube.com/*",
        "http://localhost/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src https://huggingface.co https://*.huggingface.co https://raw.githubusercontent.com https://*.hf.co http://localhost:* https://generativelanguage.googleapis.com"
    }
}